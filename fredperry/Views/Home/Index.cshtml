<style>
    /* Set height of the page */
    html, body {
        height: 100%;
    }

    /* Styles for the transparent header */
    .transparent-header {
        background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent white */
        backdrop-filter: blur(1px); /* Apply blur effect to the background */
        position: fixed; /* Fixed position to stay at the top */
        top: 0;
        left: 0;
        width: 100%;
        z-index: 10; /* Ensure it appears above other content */
        transition: background-color 0.3s ease; /* Smooth transition for color change */
    }

    /* Additional styles to adjust content positioning */
    .main-content {
        margin-top: 80px; /* Adjust based on the height of the transparent header */
        padding: 20px;
    }

    .full-screen-element {
        width: 100%;
        height: 100%;
    }

</style>

