                @page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex justify-center items-center h-screen bg-fixed bg-cover bg-center" style="background-image: url('https://www.fredperry.com/media/widget/cache/H/E/151eb6247b24739ee1d8ae1bc58462b8/media/wysiwyg/2024/Q1/hp/HERO-1303-DESKTOP.jpg');">
    <div class="w-full md:w-1/2 lg:w-1/3">
        <h1 class="text-3xl font-semibold mb-8 text-center">@ViewData["Title"]</h1>
        <div class="bg-white shadow-md p-6 rounded-lg">
            <h2 class="text-xl font-semibold mb-4">Create a new account</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>
                <div class="mb-4">
                    <label for="email" class="text-sm font-semibold">Email</label>
                    <input id="email" asp-for="Input.Email" class="input w-full mt-1" autocomplete="username" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label for="password" class="text-sm font-semibold">Password</label>
                    <input id="password" asp-for="Input.Password" type="password" class="input w-full mt-1" autocomplete="new-password" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label for="confirmPassword" class="text-sm font-semibold">Confirm Password</label>
                    <input id="confirmPassword" asp-for="Input.ConfirmPassword" type="password" class="input w-full mt-1" autocomplete="new-password" placeholder="confirm password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary w-full">Register</button>
            </form>

            <div class="mt-4 text-sm">
                <p><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-600">Already have account?</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
